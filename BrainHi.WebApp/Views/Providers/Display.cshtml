                    <!-- Heading -->
                    <h1 class="display-4 mb-2">
                        @Model.ProviderFullName
                    </h1>

                    <!-- Text -->
                    <p class="font-size-lg text-gray-700 mb-5 mb-md-0">
                        @Model.Specialty · City, PR
                    </p>

                </div>
            </div> <!-- / .row -->
            <div class="row">
                <div class="col-12">

                    <!-- Divider -->
                    <hr class="my-6 my-md-8 border-gray-300">

                </div>
            </div> <!-- / .row -->
            <div class="row">
                <div class="col-12 col-md-8">

